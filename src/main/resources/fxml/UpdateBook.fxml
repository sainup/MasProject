<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mas.lms.controller.UpdateBookController"
      spacing="20" alignment="CENTER" stylesheets="@../styles/styles.css">
    <Label text="Update Book" styleClass="title"/>
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Book ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="bookIdField" promptText="Enter Book ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" promptText="Enter Book Title" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Author:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="authorField" promptText="Enter Author Name" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="ISBN:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="isbnField" promptText="Enter ISBN" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Category:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="categoryField" promptText="Enter Category" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Publisher:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="publisherField" promptText="Enter Publisher" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Publisher Address:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="publisherAddressField" promptText="Enter Publisher Address" GridPane.rowIndex="6"
                   GridPane.columnIndex="1"/>

        <Button text="Update Book" onAction="#updateBook" defaultButton="true" GridPane.rowIndex="7"
                GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
    </GridPane>
</VBox>
